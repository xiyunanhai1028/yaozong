/* pages/PersonalCenter/PersonalCenter.wxss */
.person {
  width:750rpx;
  height:358rpx;
  background:rgba(71,104,243,1);  
}
.person-center {
  position: fixed;
  width: 690rpx;
  top: 205rpx;
  left: 30rpx;
}
.person-top {
  background-color: #fff;
  position: relative;
  padding-top: 80rpx;
  text-align: center;
  padding-bottom: 0rpx;
  border-radius: 20rpx;
}
.person-top-image {
  width: 132rpx;
  height: 132rpx;
  border-radius: 100%;
  position: absolute;
  background-color: rebeccapurple;
  left: 279rpx;
  top: -60rpx;
}
.name {
  font-size:36rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(62,62,62,1);
  line-height:40rpx;  
}
.zhanghao {
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(154,154,154,1); 
}
.jindou {
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
   padding: 20rpx 0rpx;
}
.zhanghao {
  border-bottom: 1rpx  solid rgba(240,240,240,1);
  padding: 20rpx 0rpx;
}
.person-li {
  background-color: #fff;
  padding: 40rpx 30rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
}
.person-li image {
  display: inline-block;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
}
.person-li view {
  display: inline-block;
  vertical-align: middle;
  padding-left: 20rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1); 
}